<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign Up</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        or
        <%= link_to "Sign In", new_user_session_path, class: "font-medium text-blue-500" %>
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
        <input type="hidden" name="remember" value="true">
        <div class="-space-y-px rounded-md shadow-sm">
          <div>
            <%= f.label :email, class: "sr-only" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-blue-500 focus:outline-none focus:ring-blue-500 sm:text-sm", placeholder: "Email address"  %>
          </div>
          <div>
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-blue-500 focus:outline-none focus:ring-blue-500 sm:text-sm", placeholder: "Password" %>
          </div>
        </div>

        <div>
          <% if resource.errors[:email].any? %>
            <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
              <span class="font-medium">Email Field Error!</span> <%= resource.errors[:email].first %>
            </div>
          <% end %>
        </div>

        <div>
          <% if resource.errors[:password].any? %>
            <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
              <span class="font-medium">Password Field Error!</span> <%= resource.errors[:password].first %>
            </div>
          <% end %>
        </div>

        <div>
          <%= f.submit "Sign Up", class: "h-12 group relative flex w-full justify-center rounded-md border border-transparent text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br py-2 px-4 text-sm font-medium focus:ring-offset-2" do %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
