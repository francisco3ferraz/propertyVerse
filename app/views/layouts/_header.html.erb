    <div class="max-w-screen-2xl mx-auto px-2 sm:px-4 lg:divide-y lg:divide-gray-200 lg:px-8">
        <div class="relative h-20 flex justify-between">       
            <div class="relative z-10 px-2 flex lg:px-0">
                <div class="flex-shrink-0 flex items-center">
                    <%= link_to root_path do %>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" class="hidden h-14 w-auto lg:inline">
                            <g fill="#1E90FF">
