<div
    data-controller="share-modal"
    data-share-url="<%= url_for(only_path: false) %>"
>
    <div class="flex mb-5">
        <div class="flex-none cursor-pointer" data-modal-target="closeButton">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </div>
    </div>

    <div class="mb-6">
        <p class="text-2xl font-medium mb-4">Share this place with friends and family</p>

        <div class="relative flex items-center space-x-3">
            <div class="flex-shrink-0">
                <%= image_tag content_params[:property].default_image, class: "h-16 w-16 rounded-lg" %>
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-lg text-gray-900"><%= content_params[:property].name %></p>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div data-action="click->share-modal#copyLink" class="cursor-pointer hover:bg-gray-100 relative rounded-lg border border-gray-300 bg-white px-4 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
            <div class="flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="h-9 w-9 rounded-lg block" aria-hidden="true" role="presentation" focusable="false">
                    <path d="M25 5a4 4 0 0 1 4 4v17a5 5 0 0 1-5 5H12a5 5 0 0 1-5-5V10a5 5 0 0 1 5-5h13zm0 2H12a3 3 0 0 0-3 3v16a3 3 0 0 0 3 3h12a3 3 0 0 0 3-3V9a2 2 0 0 0-2-2zm-3-6v2H11a6 6 0 0 0-5.996 5.775L5 9v13H3V9a8 8 0 0 1 7.75-7.996L11 1h11z"></path>
                </svg>
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-md font-medium text-gray-900">Copy Link</p>
            </div>
        </div>
        <div data-action="click->share-modal#shareWhatsapp" class="cursor-pointer hover:bg-gray-100 relative rounded-lg border border-gray-300 bg-white px-4 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
            <div class="flex-shrink-0">
                <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 rounded-lg block" aria-hidden="true" role="presentation" focusable="false">
                    <path d="m32 0v32h-32v-32z" fill="#25d366"></path>
                    <path d="m4 28 1.695-6.163a11.824 11.824 0 0 1 -1.595-5.946c.003-6.556 5.364-11.891 11.95-11.891a11.903 11.903 0 0 1 8.453 3.488 11.794 11.794 0 0 1 3.497 8.414c-.003 6.557-5.363 11.892-11.95 11.892-2 0-3.97-.5-5.715-1.448zm6.628-3.807c1.684.995 3.292 1.591 5.418 1.592 5.474 0 9.933-4.434 9.936-9.885.002-5.462-4.436-9.89-9.928-9.892-5.478 0-9.934 4.434-9.936 9.884 0 2.225.654 3.891 1.754 5.634l-1.002 3.648 3.76-.98h-.002zm11.364-5.518c-.074-.123-.272-.196-.57-.344-.296-.148-1.754-.863-2.027-.96-.271-.1-.469-.149-.667.147-.198.295-.767.96-.94 1.157s-.346.222-.643.074c-.296-.148-1.253-.46-2.386-1.466-.881-.783-1.477-1.75-1.65-2.045s-.018-.455.13-.602c.134-.133.296-.345.445-.518.15-.17.2-.294.3-.492.098-.197.05-.37-.025-.518-.075-.147-.668-1.6-.915-2.19-.241-.577-.486-.499-.668-.508l-.569-.01a1.09 1.09 0 0 0 -.79.37c-.272.296-1.039 1.01-1.039 2.463s1.064 2.857 1.211 3.054c.15.197 2.092 3.18 5.068 4.458.708.304 1.26.486 1.69.622.712.224 1.359.193 1.87.117.57-.084 1.755-.714 2.002-1.404.248-.69.248-1.28.173-1.405z" fill="#FFF"></path>
                </svg>
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-md font-medium text-gray-900">WhatsApp</p>
            </div>
        </div>
    </div>
</div>
