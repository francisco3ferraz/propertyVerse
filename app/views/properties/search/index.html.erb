<div class="container mx-auto py-16" data-controller="google-maps">
    <div class="grid grid-cols-5 gap-4">
        <div class="col-span-2">
            <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8">
                <%= render partial: "properties/property", collection: @properties, as: :property %>
            </ul>
        </div>
        <div class="col-span-3">
            <div data-google-maps-target="map" id="map"></div>
        </div>
    </div>
</div>